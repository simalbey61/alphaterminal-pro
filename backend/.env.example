# ============================================================================
# AlphaTerminal Pro - Environment Variables
# ============================================================================
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin
# cp .env.example .env
# ============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=AlphaTerminal Pro
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production, testing
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_DOCS_ENABLED=true

# CORS (virgülle ayrılmış)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alphaterminal
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# TTL Settings (seconds)
REDIS_MARKET_DATA_TTL=300
REDIS_ANALYSIS_TTL=300
REDIS_FEATURE_TTL=600
REDIS_SIGNAL_TTL=3600
REDIS_STRATEGY_TTL=3600

# =============================================================================
# TELEGRAM BOT
# =============================================================================
TELEGRAM_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_ADMIN_IDS=123456789,987654321
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_WEBHOOK_URL=

# Rate Limiting
TELEGRAM_RATE_LIMIT_MESSAGES=30
TELEGRAM_RATE_LIMIT_WINDOW=60

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# SMC ENGINE
# =============================================================================
SMC_SWING_LOOKBACK=20
SMC_SWING_STRENGTH=3
SMC_STRUCTURE_LOOKBACK=50
SMC_OB_LOOKBACK=50
SMC_OB_BODY_MULTIPLIER=1.5
SMC_OB_MAX_AGE=100
SMC_OB_MITIGATION_THRESHOLD=0.5
SMC_FVG_LOOKBACK=30
SMC_FVG_MIN_SIZE_ATR=0.3
SMC_LIQUIDITY_LOOKBACK=50
SMC_EQUAL_LEVEL_TOLERANCE=0.001
SMC_SWEEP_CONFIRMATION_CANDLES=3
SMC_EQUILIBRIUM_PERIOD=50

# =============================================================================
# ORDER FLOW ENGINE
# =============================================================================
ORDERFLOW_VOLUME_MA_PERIOD=20
ORDERFLOW_VOLUME_SPIKE_THRESHOLD=2.0
ORDERFLOW_DELTA_LOOKBACK=20
ORDERFLOW_CVD_SMOOTHING=5
ORDERFLOW_ABSORPTION_VOLUME_THRESHOLD=1.5
ORDERFLOW_ABSORPTION_PRICE_THRESHOLD=0.3

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
RISK_MAX_RISK_PER_TRADE=0.02
RISK_MAX_PORTFOLIO_HEAT=0.06
RISK_MAX_POSITIONS=5
RISK_DEFAULT_SL_ATR_MULT=1.5
RISK_MAX_SL_PERCENT=0.05
RISK_DEFAULT_RR_RATIO=2.0
RISK_MAX_DAILY_LOSS=0.03
RISK_MAX_WEEKLY_LOSS=0.06
RISK_PAUSE_AFTER_CONSECUTIVE_LOSSES=3

# =============================================================================
# SIGNAL GENERATION
# =============================================================================
SIGNAL_SMC_WEIGHT=0.30
SIGNAL_ORDERFLOW_WEIGHT=0.25
SIGNAL_ALPHA_WEIGHT=0.20
SIGNAL_ML_WEIGHT=0.15
SIGNAL_MTF_WEIGHT=0.10
SIGNAL_MIN_SIGNAL_SCORE=65.0
SIGNAL_STRONG_SIGNAL_SCORE=80.0
SIGNAL_TIER1_THRESHOLD=85.0
SIGNAL_TIER2_THRESHOLD=70.0
SIGNAL_TIER3_THRESHOLD=55.0

# =============================================================================
# AI STRATEGY
# =============================================================================
AI_DAILY_WINNER_THRESHOLD=0.03
AI_WEEKLY_WINNER_THRESHOLD=0.10
AI_MONTHLY_WINNER_THRESHOLD=0.25
AI_MIN_PATTERN_SUPPORT=0.05
AI_MIN_PATTERN_CONFIDENCE=0.55
AI_MAX_TREE_DEPTH=5
AI_MIN_BACKTEST_PERIOD_DAYS=180
AI_WALK_FORWARD_WINDOWS=12
AI_MONTE_CARLO_SIMULATIONS=1000
AI_MIN_WIN_RATE=0.55
AI_MIN_PROFIT_FACTOR=1.5
AI_MIN_SHARPE_RATIO=1.0
AI_MAX_DRAWDOWN=0.20
AI_STRATEGY_REVIEW_DAYS=60
AI_GENETIC_POPULATION_SIZE=20
AI_GENETIC_GENERATIONS=10
AI_MUTATION_RATE=0.1

# =============================================================================
# MARKET
# =============================================================================
MARKET_DEFAULT_INDEX=XU100.IS
MARKET_DEFAULT_INTERVAL=1h
MARKET_DEFAULT_PERIOD=3mo
MARKET_OPEN_HOUR=10
MARKET_CLOSE_HOUR=18
MARKET_RISK_FREE_RATE=0.40

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
